.slider
	background-color $black
	display block
	&__slide
		display none
		&.slick-initialized
			display block
	&__content
		padding-bottom 4rem
	&__item
		position relative
		padding-top 2.4rem
	&__information
		position absolute
		display flex
		flex-direction column
		left 0
		top 0
		padding 4.1rem 0 2rem 2.4rem
		width 100%
		height 100%
		z-index 1
	&__title
		position absolute
		bottom 5rem
		width 60%
		max-width 19.2rem
		font-size 4rem
		line-height 4.7rem
		font-weight 900
		&_ui
			font-family $un
			text-shadow: 0 4px 4px rgba(0, 0, 0, .25)
			.slider__title-value_number
				display block
				font-size 6rem


	&__link-wrapper
		margin-top auto
	&__link
		position relative
		display inline-block
		font-size 1.4rem
		font-weight 600
		line-height 1.6rem
		color $orange
		padding-bottom 3px
		overflow hidden
		&:before
			position absolute
			content ''
			width 100%
			height 1px
			border-radius 5px
			background-color $w
			bottom 0
			left 0
			transform translateX(-100%)
			transition .2s
		&:hover
			&:before
				transform translateX(0)
	&__cat
		display flex
		align-items center
	&__icon
		width 15px
		height 20px
		margin-right 1rem
	&__name
		font-size 1.6rem
	&__image-container
		display inline-block
		border-radius 10px
		overflow hidden
		opacity .4
		margin 0 2.4rem 0 auto
		&_no-opacity
			opacity 1
	&__image
		display flex


